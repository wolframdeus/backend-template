{
  "name": "backend-template",
  "version": "1.3.5",
  "main": "index.js",
  "repository": "git@github.com:wolframdeus/backend-template.git",
  "author": "Vladislav Kibenko <wolfram.deus@gmail.com>",
  "license": "MIT",
  "scripts": {
    "schema": "rimraf src/gql/types/schema && gql-types-generator --output-directory src/gql/types/schema node_modules/graphql-bridge/src/*.graphql",
    "upgrade-schema": "yarn upgrade --latest graphql-bridge && yarn schema",
    "dev": "dotenv -e .env -- ts-node-dev --transpileOnly --clear -- src/index.ts",
    "build": "rimraf dist && tsc",
    "test": "tsc --noEmit",
    "lint": "eslint src/**",
    "validate": "npm-run-all test lint",
    "commit": "git-cz",
    "start": "dotenv -e .env -- node dist/index.js",
    "tunnel": "ngrok http --region eu ",
    "release": "standard-version -a",
    "release:tags": "git push --follow-tags origin master",
    "release:github": "dotenv -e .env -- conventional-github-releaser -p eslint",
    "postrelease": "npm-run-all release:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/mongodb": "^3.5.4",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "commitizen": "^4.1.2",
    "conventional-github-releaser": "^3.1.3",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "gql-types-generator": "^1.4.10",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "ngrok": "^3.2.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "apollo-resolvers": "^1.4.2",
    "apollo-server-express": "^2.11.0",
    "chalk": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "graphql-bridge": "git+ssh://git@github.com:wolframdeus/graphql-bridge-template.git",
    "mongodb": "^3.5.5",
    "vkontakte-api": "^1.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
